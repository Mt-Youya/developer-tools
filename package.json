{
  "name": "dev-tools",
  "version": "0.0.1",
  "description": "developer tools for meituan internal use",
  "scripts": {
    "dev": "pnpm --filter dev-tools dev",
    "build": "pnpm -r run build",
    "preview": "pnpm build && pnpm -F dev-tools preview",
    "lint": "biome check ./packages ./apps",
    "lint:fix": "biome check --write ./packages ./apps",
    "lint:oxlint": "oxlint packages/*/src",
    "format": "biome format --write ./packages ./apps",
    "oxlint": "oxlint packages apps",
    "check": "pnpm lint:fix && pnpm oxlint",
    "typecheck": "pnpm -r --parallel typecheck",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "get-directory": "node scripts/generateDirectoryTree.ts",
    "add-shadcn-comp": "node scripts/autoCreateShadcnComp.ts",
    "update-pkg": "node scripts/updatePkg.ts",
    "remove-pkg": "node scripts/removePkg.ts"
  },
  "keywords": [],
  "author": "Yonjay Doyle",
  "license": "ISC",
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "dependencies": {
    "@devtools/libs": "workspace:*",
    "@devtools/utils": "workspace:*",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.546.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@tailwindcss/vite": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/ui": "^3.2.4",
    "globals": "^16.4.0",
    "jsdom": "^27.0.1",
    "oxlint": "^1.24.0",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-oxlint": "^0.7.5",
    "vite": "^7.1.10",
    "vite-plugin-inspect": "^11.3.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0"
    }
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "endOfLine": "auto",
    "arrowParens": "avoid",
    "semi": true,
    "trailingComma": "all",
    "proseWrap": "never"
  }
}
