{
  "name": "@devtools/ui",
  "version": "0.0.1",
  "description": "UI components for DevTools",
  "type": "module",
  "main": "main.ts",
  "author": "Yonjay Doyle",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node ./build.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "dev": "vite build",
    "shadcn-add": "node ../../scripts/autoCreateShadcnComp.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./style.css": "./src/style/global.css",
    "./Alert": "./src/components/Alert/index.ts",
    "./Badge": "./src/components/Badge/index.ts",
    "./Button": "./src/components/Button/index.ts",
    "./Card": "./src/components/Card/index.ts",
    "./Checkbox": "./src/components/Checkbox/index.ts",
    "./Collapsible": "./src/components/Collapsible/index.ts",
    "./Drawer": "./src/components/Drawer/index.ts",
    "./DropdownMenu": "./src/components/DropdownMenu/index.ts",
    "./Input": "./src/components/Input/index.ts",
    "./Label": "./src/components/Label/index.ts",
    "./Loader": "./src/components/Loader/index.ts",
    "./Progress": "./src/components/Progress/index.ts",
    "./QRCode": "./src/components/QRCode/index.ts",
    "./Select": "./src/components/Select/index.ts",
    "./Separator": "./src/components/Separator/index.ts",
    "./Slider": "./src/components/Slider/index.ts",
    "./Sonner": "./src/components/Sonner/index.ts",
    "./Table": "./src/components/Table/index.ts",
    "./Tabs": "./src/components/Tabs/index.ts",
    "./Textarea": "./src/components/Textarea/index.ts",
    "./Tooltip": "./src/components/Tooltip/index.ts"
  },
  "devDependencies": {
    "@devtools/libs": "workspace:*",
    "@devtools/utils": "workspace:*",
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^4.0.3",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.548.0",
    "next-themes": "^0.4.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
