{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",

  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  "biome.enabled": true,
  "biome.lsp.bin": "node_modules/.bin/biome",

  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "always",
    "source.fixAll.oxlint": "always"
  },

  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.hubs-cache/**": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
